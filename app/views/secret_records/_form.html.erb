<%= simple_form_for(@secret_record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :username %>
    <%= f.input :password, input_html: { data: { type: 'password', encrypt: 'true' } } %>
    <%= f.input :url %>
    <%= f.input :notes, input_html: { rows: 4 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
