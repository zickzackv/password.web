<div class="btn-group pull-right">
  <%= link_to 'New', new_group_path, class: 'btn' %>
</div>
<h1>Listing groups</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td>
        <div class="btn-group pull-right">
          <%= link_to 'Show', group, class: 'btn btn-small' %>
          <%= link_to 'Edit', edit_group_path(group), class: 'btn btn-small' %>
          <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

